<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="xinghom.com.timechallenger_static.MainActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_part"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="distributedly"/>

        <Button
            android:id="@+id/btn_count"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="continuously"/>
    </LinearLayout>

    <xinghom.com.timechallenger_static.view.PieChart
        android:id="@+id/pic_chart"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
